<div class="container">
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-8">
      <% @posts.each do |post| %>
        <div>
          <!-- Title -->
          <h1 class="mt-4"><%= post.title %></h1>
          <!-- Author -->
          <p class="lead">
            by
            <a href="#"><%= post.user.name %></a>
          </p>
          <hr>
          <!-- Date/Time -->
          <p>Posted on <%= post.created_at %></p>
          <hr>
          <!-- Preview Image -->
          <img class="img-fluid rounded" src=<%= post.image_url %> alt="">
          <hr>
          <!-- Post Content -->
          <p><%= post.description %></p>
          <hr>
        </div>
      <% end %>
    </div>
  </div>
</div>
