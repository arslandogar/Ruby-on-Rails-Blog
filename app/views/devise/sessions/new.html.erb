<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Sign In</h5>
          <div class="form-signin">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-label-group">
                <%= f.email_field :email, id: "inputEmail", class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Email address" %>
                <label for="inputEmail">Email address</label>
              </div>
              <div class="form-label-group">
                <%= f.password_field :password, id: "inputPassword", class: "form-control", placeholder: "Password", autocomplete: "current-password" %>
                <label for="inputPassword">Password</label>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <div class="custom-control custom-checkbox mb-3">
                    <%= f.check_box :remember_me, class:"custom-control-input", id:"customCheck1"%>
                    <label class="custom-control-label" for="customCheck1">Remember password</label>
                  </div>
                </div>
              <% end %>
              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
              </div>
              <hr class="my-4">
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
